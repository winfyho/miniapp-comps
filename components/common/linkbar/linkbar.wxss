/* components/common/linkbar/linkbar.wxss */
.linkbar{
    display: flex;
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    background: #fff;
}
.title{
    box-sizing: border-box;
    padding-left: 50rpx;
    flex: 1 1 auto;
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    font-size: 30rpx;
}
.icon {
    flex: 0 0 auto;
    box-sizing: border-box;
    padding: 30rpx;
    width: 100rpx;
    height: 100rpx;
}
.icon-img{
    width: 100%;
    height: 100%;
}