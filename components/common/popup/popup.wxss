/* components/common/popup/popup.wxss */
.popup-mask{
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, .7);
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
}
.popup-wraper{
    position: absolute;
    z-index: 101;
    width: 100%;
    height: 1000rpx;
    background: #fff;
    bottom: 0;
    left: 0;
    right: 0;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.popup-header{
    position: relative;
    display: flex;
    height: 100rpx;
    border-bottom: 1px solid #eee;
}
.popup-header .close{
    position: relative;
    z-index: 2;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    text-align: center;
}
.popup-header .title{
    position: absolute;
    width: 100%;
    text-align: center;
    line-height: 100rpx;
    font-weight: bold;
}