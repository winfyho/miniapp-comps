/* components/common/tabs/tabs.wxss */
.tabs{
    position: relative;
    width: 100%;
    height: 100rpx;
    padding-bottom: 10rpx;
    background: #ffffff;
}
.tabs-wraper{
    width: 100%;
    height: 100%;
    display: flex;
    position: relative;
}
.tab-item{
    text-align: center;
    color: #444;
    height: 100%;
    line-height: 100rpx;
}
.tab-slider{
    position: absolute;
    text-align: center;
    bottom: 0;
    left: 0;
    width: 33.33333%;
    height: 10rpx;
    transition: all .3s;
    font-size: 0;
}
.tab-slider .tab-slider-inner{
    display: inline-block;
    height: 100%;
    border-radius: 10rpx;
}