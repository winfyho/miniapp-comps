/* components/common/wf-form-item/wf-form-item.wxss */
.wf-form-item{
    width: 100%;
    display: flex;
    box-sizing: border-box;
    padding: 30rpx;
    background:#fff;
}

.wf-form-item .title{
    flex: 0 0 auto;
    width: 30%;
    height: 60rpx;
    line-height: 60rpx;
}

.wf-form-item .value{
    flex: 0 0 auto;
    width: 70%;
    height: 60rpx;
}

.wf-form-item .value .input{
    width: 100%;
    height: 100%;
    line-height: 60rpx;
}