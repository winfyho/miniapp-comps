.wf-picker-column{
    position: relative;
    z-index: 3;
    flex: 1 1 auto;
    height: 540rpx;
    background: #fff;
    transition: all .1s;
}

.wf-picker-column .list .item{
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}

