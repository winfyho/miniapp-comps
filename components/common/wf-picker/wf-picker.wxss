/* components/common/wf-picker/wf-picker.wxss *//* components/common/wf-picker-view-column/wf-picker-view-column.wxss */
.wf-picker{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 540rpx;
    padding: 20rpx 0;
    overflow: hidden;
    display: flex;
    background: #fff;
}
.wf-picker .column{
    flex: 1 1 auto;
}
.picker-mask{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 90rpx;
    /* border-style: solid;
    border-width: 290rpx 0 200rpx 0; */
    /* border-color: rgba(245, 245, 245, .3) transparent rgba(245, 245, 245, .3) transparent; */
    border-image-width: auto;
    border-image: linear-gradient(180deg, hsla(0, 0%, 100%, 0.9), hsla(0, 0%, 100%, 0.4)), linear-gradient(0deg, hsla(0, 0%, 100%, 0.9), hsla(0, 0%, 100%, 0.4));
}
.picker-select{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 90rpx;
    top: 50%;
    background: rgba(0, 0, 0, .3);
    pointer-events: none;
    backface-visibility: hidden;
}